<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_show_item"
    android:layout_width="@dimen/cv_show_item_width"
    android:layout_height="@dimen/cv_show_item_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">


        <ImageView
            android:id="@+id/animeImage"
            android:layout_width="102dp"
            android:layout_height="112dp"
            android:background="@color/anime_item_dbc"
            android:backgroundTint="@color/anime_item_dbc"
            android:contentDescription="@string/animeez"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/baseline_movie_filter_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>